package vmodl.test.uber.primitives;

import vmodl.test.uber.UberResources;
import vmodl.lang.*;

/** Specifies a test interface for all VMODL2 primitive types. */
@Resource(UberResources.UBER)
interface UberPrimitives {

    /** void operation */
    void echoNothing();

    /**
     * echo a Boolean value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    boolean echoBoolean(boolean input);

    /**
     * echo a Double value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    double echoDouble(double input);

    /**
     * echo a Long value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    long echoLong(long input);

    /**
     * echo a String value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    String echoString(String input);

    /**
     * echo a Binary value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    Binary echoBinary(Binary input);

    /**
     * echo a DateTime value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    DateTime echoDateTime(DateTime input);

    /**
     * echo an ID value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    ID echoId(ID input);

    /**
     * echo an Opaque value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    Opaque echoOpaque(Opaque input);

    /**
     * echo a Secret value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    Secret echoSecret(Secret input);

    /**
     * echo an URI value
     *
     * @param input test value
     * @return same as {@param.name input}
     */
    URI echoUri(URI input);

    /**
     * echo optional Boolean
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<Boolean> echoBooleanOptional(Optional<Boolean> input);

    /**
     * echo optional Double
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<Double> echoDoubleOptional(Optional<Double> input);

    /**
     *  echo optional Long
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<Long> echoLongOptional(Optional<Long> input);

    /**
     * echo optional String
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<String> echoStringOptional(Optional<String> input);

    /**
     * echo optional Binary
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<Binary> echoBinaryOptional(Optional<Binary> input);

    /**
     * echo optional DateTime
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<DateTime> echoDateTimeOptional(Optional<DateTime> input);

    /**
     * echo optional ID
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<ID> echoIdOptional(Optional<ID> input);

    /**
     *  echo optional Secret
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<Secret> echoSecretOptional(Optional<Secret> input);

    /**
     * echo optional URI
     *
     * @param input test value
     * @param.optional input reason
     *
     * @return same as {@param.name input}
     * @return.optional reason
     */
    Optional<URI> echoUriOptional(Optional<URI> input);
}
